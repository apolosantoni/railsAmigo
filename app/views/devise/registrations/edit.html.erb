<div class="row">
  <div class="card col-md-4" style="width: 300px;">
    
    <div class="card-header">
      <h4>Editar <%= resource_name.to_s.humanize %></h4>
    </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put} ) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Aguardando confirmação de: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group">
    <%= f.label :Senha %> <i style="font-size:10px;">(deixe em branco se nao quiser alterar isso.)</i><br />
    <%= f.password_field :password, autocomplete: "Nova Senha" %>
    <% if @minimum_password_length %>
      <br />
      <em style="font-size:14px;" >minimo de <%= @minimum_password_length %> caracteres </em>
    <% end %>
  </div>

  <div class="field form-group">
    <%= f.label :Confirmar_Senha %><br />
    <%= f.password_field :password_confirmation, autocomplete: "Nova Senha" %>
  </div>

  <div class="field form-group">
    <%= f.label :Senha_Atual %><br/><span style="font-size:10px; "> (Precisamos da sua senha atual para confirmação.)</span><br/>
    <%= f.password_field :password_actual, autocomplete: "Senha_Atual" %>
  </div>

  <div class="actions">
    <%= f.submit "Atualizar" %>
  </div>
<% end %>
</div>
<div class="card col-md-4" style="width: 300px;">
</div>
<div class="card col-md-4" style="width: 300px;">
    
    <div class="card-header">
      <h4>Cancelar minha conta.</h4>
    </div>

<spam>Infeliz ? <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Voce tem certeza?" }, method: :delete, class:"btn btn-danger"%></spam>
<br/>

<%= link_to "Voltar", :back, class:"btn btn-secondary" %>
</div>
</div>